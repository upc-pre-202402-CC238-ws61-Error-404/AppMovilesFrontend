<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductsActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crop Information"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/popupTriggerTextView"
        android:layout_width="172dp"
        android:layout_height="22dp"
        android:layout_marginTop="16dp"
        android:paddingLeft="10dp"
        android:background="@drawable/rounded_background"
        android:clickable="true"
        android:focusable="true"
        android:text="Products"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleTextView" />
    <Button
        android:id="@+id/addControlButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Product"
        android:backgroundTint="#9A5D4E"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/popupTriggerTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- CardView 1 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/addControlButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/cardTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card Title 1"
                android:textSize="18sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/cardSubtitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card Subtitle 1"
                android:textSize="16sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/cardDescription1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card Description 1"
                android:textSize="14sp"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/editButton1"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:backgroundTint="#FF0B0B"
                    app:layout_constraintWidth_percent="0.5" />

                <Button
                    android:id="@+id/deleteButton1"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:backgroundTint="#FEE100"
                    app:layout_constraintWidth_percent="0.5" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CardView 2 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardView1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/cardTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card Title 2"
                android:textSize="18sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/cardSubtitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card Subtitle 2"
                android:textSize="16sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/cardDescription2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card Description 2"
                android:textSize="14sp"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/editButton2"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FF0B0B"
                    android:text="Edit"
                    app:layout_constraintWidth_percent="0.5" />

                <Button
                    android:id="@+id/deleteButton2"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FEE100"
                    android:text="Edit"
                    app:layout_constraintWidth_percent="0.5" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>